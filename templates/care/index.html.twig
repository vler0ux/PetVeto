{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-5 text-center text-primary">
        🩺 Suivi vétérinaire de vos compagnons 🐾
    </h1>

    {% if cares is empty %}
        <div class="alert alert-info text-center shadow p-4 rounded">
            <h4 class="alert-heading mb-3">Aucun soin trouvé !</h4>
            <p>Faites le point avec votre vétérinaire pour un bilan de santé 🐶🐱 !</p>
        </div>
    {% else %}
        <div class="row g-4">
            {% for care in cares %}
                <div class="col-md-6">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                🐾 {{ care.animal.name }}
                            </h5>
                            <p class="card-text">
                                <strong>Type de soin :</strong>
                                {{ care.careName ? care.careName : 'Non défini' }}<br>
                                <strong>Date :</strong>
                                {{ care.examDate|date('d/m/Y') }}
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="d-flex justify-content-center mt-5">
            <a href="{{ path('app_user_home') }}" class="btn btn-outline-secondary btn-lg">
                ⬅️ Retour à l’accueil
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
