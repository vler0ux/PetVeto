{% extends 'base.html.twig' %}

{% block title %}Mes soins - PetVeto{% endblock %}

{% block body %}
    <h1>Mes soins vétérinaires 💉</h1>

    {% if cares is empty %}
        <p>Aucun soin enregistré.</p>
    {% else %}
        <ul>
            {% for care in cares %}
                <li>
                    {{ care.type }} pour {{ care.animal.nom }} – le {{ care.date|date('d/m/Y') }}
                </li>
            {% endfor %}
        </ul>


    {% endif %}
        <div class="mt-4">
            <a href="{{ path('care_select_animal') }}" class="btn btn-success">
                ➕ Ajouter un soin
            </a>
        </div>
        <a href="{{ path('app_home') }}" class="btn btn-secondary mt-3 ms-2">
                ⬅️ Retour à l’accueil
        </a>
{% endblock %}
