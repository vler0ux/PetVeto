{% extends 'base.html.twig' %}

{% block title %}Mes animaux - PetVeto{% endblock %}

{% block body %}
    <h1>Mes animaux</h1>

    {% if animals is empty %}
        <p>Aucun animal enregistr√© pour le moment.</p>
    {% else %}
        <ul>
            {% for animal in animals %}
                <li>
                    <strong>{{ animal.nom }}</strong> - {{ animal.espece }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <a href="{{ path('animal_new') }}" class="btn btn-primary">Ajouter un animal</a>
{% endblock %}
