{% extends 'base.html.twig' %}

{% block title %}Ajouter un animal - PetVeto{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white text-center">
                    <h2 class="mb-0">Ajouter un nouvel animal üêæ</h2>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.name) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.birthday) }}
                            {{ form_widget(form.birthday, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.birthday) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.weight) }}
                            {{ form_widget(form.weight, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.weight) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.species) }}
                            {{ form_widget(form.species, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.species) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.customSpecies) }}
                            {{ form_widget(form.customSpecies, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.customSpecies) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.description) }}
                        </div>      
                        <div class="mb-3">
                            {{ form_label(form.customDescription) }}
                            {{ form_widget(form.customDescription, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.customDescription) }}
                        </div>      
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">‚úÖ Enregistrer</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

            <div class="text-center mt-3">
                <a href="{{ path('app_home') }}" class="btn btn-outline-primary">üè† Retour √† l'accueil</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
